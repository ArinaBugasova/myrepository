import discord
from discord.ext import commands
import random
import time
bot = commands.Bot(command_prefix='/', intents = discord.Intents.all())

@bot.command('start')
async def start(ctx):
    await ctx.send('Привет! Это Эко-бот! Мы комьюнити современных ребят, которые топят за сохранность нашей планеты. Здесь ты найдешь инофрмацию о том как правильно перерабатывать или сортировать тот или иной материал. Сделай вклад в планету, оставив на ней свой бережный след') 
    await ctx.send('Напиши "/помощь", чтобы увидеть список команд"')

@bot.command('дерево')
async def tree(ctx):
    await ctx.send('Используют несколько способов утилизации древесины — сжигание, быстрый пиролиз и газификацию. Сжигание древесных отходов производится в специальных печах, в которых образуется тепло для дальнейшего обогрева воды, помещений и так далее.') 
    
@bot.command('пластик')
async def plastic(ctx):
    await ctx.send('Промойте бутылочку, просушите её, удалите этикетки, снимите крышки и колечки от них. Сомните бутылку, чтобы она занимала меньше места. Не выбрасывайте пластик в обычную урну - заберите бутылочку домой. Накопленный пластик отнесите в точку сбора вторсырья.') 

@bot.command('батарейка')
async def batarey(ctx):
    await ctx.send('Утилизация батареек должна происходить согласно санитарным нормам, то есть в специализированный контейнер. На каждом таком изделии есть обозначение, что его нельзя выкидывать вместе с обычными бытовыми отходами. По самым скромным подсчетам в каждой семье найдется не менее 1 десятка источников питания.') 

@bot.command('Эко это')
async def eco(ctx):
    await ctx.send('Эко сообщество - это объединение людей, которые заботятся о окружающей среде и принимают активное участие в ее защите. В нем можно найти экологические проекты, мероприятия, обмен опытом и знаниями. Основная цель такого сообщества - создание устойчивой экологической среды для жизни и развития человека.') 

@bot.command('Рандом')
async def random(ctx):
    a = random.randint(1, 4)
    if a == 1:
        await ctx.send('Команда "дерево"')
        time.sleep(2)
        await ctx.send('Используют несколько способов утилизации древесины — сжигание, быстрый пиролиз и газификацию. Сжигание древесных отходов производится в специальных печах, в которых образуется тепло для дальнейшего обогрева воды, помещений и так далее.') 
    elif a == 2:
        await ctx.send('Команда "пластик"')
        time.sleep(2)
        await ctx.send('Промойте бутылочку, просушите её, удалите этикетки, снимите крышки и колечки от них. Сомните бутылку, чтобы она занимала меньше места. Не выбрасывайте пластик в обычную урну - заберите бутылочку домой. Накопленный пластик отнесите в точку сбора вторсырья.') 
    elif a == 3:
        await ctx.send('Команда "батарейка"')
        time.sleep(2)
        await ctx.send('Утилизация батареек должна происходить согласно санитарным нормам, то есть в специализированный контейнер. На каждом таком изделии есть обозначение, что его нельзя выкидывать вместе с обычными бытовыми отходами. По самым скромным подсчетам в каждой семье найдется не менее 1 десятка источников питания.')

@bot.command('помощь')
async def ist(ctx):
    await ctx.send('Команда "/батарейка" - инфа про батарейки')
    await ctx.send('Команда "/пластик" - инфа про пластик')
    await ctx.send('Команда "/дерево" - инфа про дерево')
    await ctx.send('Команда "/рандом" - рандомная инфа')
bot.run('')
